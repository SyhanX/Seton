<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="topBarTitleText" parent="">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="cardTitleText" parent="">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="cardBodyText" parent="">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="popupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="popupMenuBackground">@drawable/popup_menu_background</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="roundedCornersImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="noteCardStyle" parent="Base.CardView">
        <item name="background">@drawable/note_card_background</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">?attr/colorSurface</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="contentPadding">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>