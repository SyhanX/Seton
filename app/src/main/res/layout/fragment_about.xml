<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:text="@string/app_description_1"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/desc_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:text="@string/app_description_2"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/desc_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_description_3"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/desc_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_description_4"
        android:textSize="18sp" />


</LinearLayout>